<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Select # of movies to load:"
    />

    <Spinner 
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/download_count_prompt"
    />

    <Button android:text="Save" 
    android:id="@+id/save_button" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"></Button>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Reducing the number of titles download will increase performance,  but you will only see the top portion of your queue. You may also choose 'All' but this can be very slow if you have >100 titles"
    />

</LinearLayout>

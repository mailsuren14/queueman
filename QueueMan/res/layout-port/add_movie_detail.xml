<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<RelativeLayout android:id="@+id/topsection"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/boxart" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginTop="20dip"
			android:layout_marginRight="20dip" android:layout_marginLeft="20dip"
			android:src="@drawable/red_icon" />


		<TextView android:id="@+id/mtitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/boxart"
			android:layout_marginTop="10dip" android:textSize="30sp"
			android:text="Jumanji" />

		<TextView android:id="@+id/myear" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/boxart"
			android:layout_marginTop="10dip" android:textSize="30sp"
			android:layout_below="@id/mtitle" android:text="1993" />

		<Button android:layout_width="wrap_content" android:id="@+id/Button01"
			 android:layout_toRightOf="@id/myear"
			android:layout_alignTop="@id/myear" android:text="@+id/Button01" 
			android:layout_height="35dp"
			android:height="35dp"/>
	
	<RatingBar android:id="@+id/RatingBar01"
			android:layout_marginRight="20sp" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_below="@+id/Button01"
			android:layout_toRightOf="@+id/boxart" style="?android:attr/ratingBarStyleSmall" />
		</RelativeLayout>
	<ScrollView android:id="@+id/ScrollView1" android:layout_width="fill_parent"
		android:layout_below="@id/topsection" android:layout_height="wrap_content" 
		android:clipChildren="true" 
		android:fillViewport="false" 
		android:layout_above="@+id/add_movie" 
		android:layout_marginLeft="8dp" 
		android:layout_marginTop="8dp">
		<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:visibility="visible" android:orientation="vertical">
			<TextView android:id="@+id/synopsis" android:layout_width="fill_parent"
				android:layout_height="wrap_content"  android:text="Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis.Unable to load Title Synopsis." />
			<TextView android:id="@+id/Formats" 			android:text="Availability: " android:layout_width="fill_parent"
				 android:layout_height="wrap_content" />
		
		
	<RadioGroup android:id="@+id/add_options" android:layout_width="fill_parent" android:visibility="visible" android:layout_height="wrap_content" android:layout_centerVertical="false">	
			<RadioButton android:id="@+id/radio_instant" android:layout_width="wrap_content" android:layout_height="40sp" android:text="Add to Instant Queue" />
			<RadioButton android:id="@+id/radio_top" android:layout_width="wrap_content" android:layout_height="40sp" android:text="Add to Top of Disc Queue" />
	
			<RadioButton android:id="@+id/radio_bottom" android:layout_width="wrap_content" android:layout_height="40sp" android:text="Add to Bottom of Disc Queue" />
	
		</RadioGroup></LinearLayout>
		

	</ScrollView>
	
	<Button android:id="@+id/add_movie" android:layout_width="wrap_content"
	android:layout_alignParentBottom="true" android:layout_marginBottom="5sp"
		android:layout_marginTop="5sp" android:text="Add"  android:layout_height="45dp" android:layout_centerHorizontal="true"/>
	
	<TextView android:id="@+id/netflix_branding"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
	 android:gravity="right"
	 android:layout_alignParentBottom="true"
		android:layout_marginTop="3dip" android:textSize="10sp"
		android:text="Delivered by Netflix" />
</RelativeLayout>

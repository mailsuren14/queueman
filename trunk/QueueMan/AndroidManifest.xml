<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="edwardawebb.queueman.core" 
	android:versionCode="23" android:versionName="0.9.6Beta">
	<uses-permission android:name="android.permission.INTERNET" />
	
	
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".QueueMan" android:label="@string/app_name" 
		android:launchMode="singleTop"  android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="flixman" />
			</intent-filter>			
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>		
		<activity android:name=".QueueSearch" android:label="Search Available Titles">	
		</activity>	
		<activity android:name=".MovieDetails" android:label="Movie Details" android:theme="@android:style/Theme.Light">
		</activity>
		<activity android:name=".Settings" android:label="QueueMan Settings" >
		</activity>
</application>
	<uses-sdk android:minSdkVersion="3" android:maxSdkVersion="4" />
</manifest> 
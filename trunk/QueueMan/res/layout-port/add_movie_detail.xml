<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<RelativeLayout android:id="@+id/topsection"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/boxart" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dip"
			android:layout_marginRight="20dip"
			android:layout_marginLeft="20dip" 
			android:src="@drawable/red_icon" />


		<TextView android:id="@+id/mtitle" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/boxart"
			android:layout_marginTop="10dip"
			android:textSize="30sp"  android:text="Jumanji" />
			
		<TextView android:id="@+id/myear" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/boxart"
			android:layout_marginTop="10dip"
			android:textSize="30sp"  
			android:layout_below="@id/mtitle"
			android:text="1993" />
			
		<RatingBar
		 android:id="@+id/RatingBar01"
		  android:layout_marginRight="20sp"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		   android:layout_below="@+id/myear"
		   android:layout_toRightOf="@+id/boxart"
		   style="?android:attr/ratingBarStyleSmall"/>  	
		   <Button 
			android:layout_width="wrap_content" 
			android:id="@+id/Button01" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/myear"
			android:layout_alignTop="@id/myear"
			 android:text="@+id/Button01"/>
	</RelativeLayout>

	<TextView android:id="@+id/synopsis" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/topsection"
		android:layout_marginLeft="10dip"
		android:layout_marginTop="10dip"
		android:text="Unable to load Title Synopsis." />
	<TextView 
	   android:id="@+id/Formats"
	   android:layout_below="@+id/synopsis"
	 android:text="Availability: "
	  android:layout_width="fill_parent"
		android:layout_marginLeft="10dip"
	    android:layout_height="wrap_content" />
		<Button android:id="@+id/add_movie" android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true" 
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="5sp"
			android:layout_marginTop="5sp"
			android:text="Add" />
			<RadioGroup android:id="@+id/add_options" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_above="@id/add_movie" >

				<RadioButton android:id="@+id/radio_instant"
					android:layout_width="wrap_content" android:layout_height="40sp"
					android:text="Add to Instant Queue" />
				<RadioButton android:id="@+id/radio_top"
					android:layout_width="wrap_content" android:layout_height="40sp"
					android:text="Add to Top of Disc Queue" />

				<RadioButton android:id="@+id/radio_bottom"
					android:layout_width="wrap_content" android:layout_height="40sp"
					android:text="Add to Bottom of Disc Queue" />

		</RadioGroup>
	<TextView android:id="@+id/netflix_branding" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@id/add_options"
			android:gravity="bottom"
			android:layout_marginTop="10dip"
			android:textSize="10sp"  android:text="Delivered by Netflix" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  		
<RadioGroup android:id="@+id/add_options" android:layout_width="fill_parent"
			android:layout_height="wrap_content"  >

			<RadioButton android:id="@+id/radio_top"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Add to Top of Disc Queue" />

			<RadioButton android:id="@+id/radio_instant"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Add to Instant Queue" />
		</RadioGroup>
		<Button android:id="@+id/add_movie" 
		android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true" 
			android:layout_marginBottom="5sp"
			android:layout_marginTop="5sp"
			android:text="Add" />
</LinearLayout>
